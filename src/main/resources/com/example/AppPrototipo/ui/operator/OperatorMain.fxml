<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.AppPrototipo.ui.operator.OperatorController">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="750.0">
         <top>
            <HBox fx:id="topPane" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #ffff;" BorderPane.alignment="CENTER">
               <children>
                  <Label prefHeight="50.0" prefWidth="102.0" />
                  <JFXButton id="boton_1" fx:id="boton_1" onAction="#showListOfExperiences" prefHeight="74.0" prefWidth="140.0" styleClass="boton_1" stylesheets="@com/example/AppPrototipo/ui/operator/style.css" text="Mis experiencias">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="boton_2" onAction="#createExperience" prefHeight="74.0" prefWidth="140.0" styleClass="boton_4" stylesheets="@com/example/AppPrototipo/ui/operator/style.css" text="Crear experiencia">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="boton_3" onAction="#showBookingsList" prefHeight="74.0" prefWidth="140.0" styleClass="boton_2" stylesheets="@com/example/AppPrototipo/ui/operator/style.css" text="Reservas">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="boton_4" onAction="#ajustes" prefHeight="74.0" prefWidth="140.0" styleClass="boton_3" stylesheets="@com/example/AppPrototipo/ui/operator/style.css" text="Ajustes">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </JFXButton>
                  <Label prefHeight="50.0" prefWidth="102.0" />
               </children>
            </HBox>
         </top>
         <center>
            <AnchorPane fx:id="innerView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="355.0" prefWidth="750.0" style="-fx-background-color: #cfcfcf;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
