    <bottom>
        <HBox alignment="CENTER" prefHeight="54.0" prefWidth="472.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Button fx:id="agregarBtn" mnemonicParsing="false" onAction="#addOperator" text="Agregar" />
